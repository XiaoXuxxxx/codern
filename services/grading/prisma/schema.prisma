generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Testcase {
  questionId Int    @id
  filePath   String
}

enum SubmissionStatus {
  UPLOADING
  GRADING
  COMPLETED
}

enum Language {
  C
  CPP
}

model Submission {
  id         Int              @id @default(autoincrement())
  questionId Int
  userId     String
  language   Language
  status     SubmissionStatus
  result     String?
  filePath   String
  uploadedAt Int              @db.UnsignedInt
}

model Editor {
  userId     String
  questionId Int
  language   Language
  codePath   String
  savedAt    Int      @db.UnsignedInt

  @@id([userId, questionId, language])
}
