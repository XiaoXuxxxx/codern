generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Workspace {
  id                    Int                     @id @default(autoincrement())
  name                  String
  profilePath           String
  ownerId               String
  createdAt             Int                     @db.UnsignedInt
  WorkspaceParticipants WorkspaceParticipants[]
  Question              Question[]
}

model WorkspaceParticipants {
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  userId      String
  joinedAt    Int       @db.UnsignedInt

  @@id([workspaceId, userId])
}

enum QuestionLevel {
  EASY
  MEDIUM
  HARD
  REVERSE
}

model Question {
  id          Int           @id @default(autoincrement())
  name        String
  description String
  detailPath  String
  memoryLimit Float         @db.Double
  timeLimit   Float         @db.Double
  level       QuestionLevel
  workspace   Workspace     @relation(fields: [workspaceId], references: [id])
  workspaceId Int
  createdAt   Int           @db.UnsignedInt
}
